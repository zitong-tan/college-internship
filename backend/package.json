{
  "name": "internship-management-backend",
  "version": "1.0.0",
  "description": "Backend API for University Internship Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "migrate": "node -e \"require('./src/utils/migrate').runMigrations().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
    "migrate:rollback": "node -e \"require('./src/utils/migrate').rollbackMigrations().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\""
  },
  "keywords": [
    "internship",
    "management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "pdfkit": "^0.17.2",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "axios": "^1.13.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
